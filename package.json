{
    "version": "0.0.9",
    "name": "elm-spa-example",
    "nameLong": "elm-spa-example - A web site built with elm-spa and elm-starter",
    "description": "An example of application bootstrapped with elm-spa and then converted to a PWA using elm-starter.",
    "author": "Luca Mugnaini",
    "twitterSite": "lucamug",
    "twitterCreator": "lucamug",
    "homepage": "https://elm-spa-example.guupa.com",
    "license": "BSD-3-Clause",
    "snapshotWidth": 700,
    "snapshotHeight": 350,
    "themeColor": {
        "red": 38,
        "green": 104,
        "blue": 69
    },
    "scripts": {
        "start": "npm install && npm run build:dev && npm run dev",
        "test": "elm-test",
        "test:watch": "elm-test --watch",
        "build": "run-s build:elm-spa build:elm",
        "build:dev": "run-s build:elm-spa build:dev:elm",
        "dev": "run-p dev:elm-spa dev:elm",
        "build:elm": "elm make src/Main.elm --optimize --output=public/dist/elm.compiled.js",
        "build:dev:elm": "elm make src/Main.elm --debug --output=public/dist/elm.compiled.js || true",
        "build:elm-spa": "elm-spa build .",
        "dev:elm": "elm-live src/Main.elm -u -d public -- --debug --output=public/dist/elm.compiled.js",
        "dev:elm-spa": "chokidar src/Pages -c \"elm-spa build .\"",
        "elm-starter:boot": "node ./src-elm-starter/elm-starter boot",
        "elm-starter:start": "node ./src-elm-starter/elm-starter start",
        "elm-starter:generateDevFiles": "node ./src-elm-starter/elm-starter generateDevFiles",
        "elm-starter:build": "node ./src-elm-starter/elm-starter build",
        "elm-starter:buildExpectingTheServerRunning": "node ./src-elm-starter/elm-starter buildExpectingTheServerRunning",
        "elm-starter:serverBuild": "node ./src-elm-starter/elm-starter serverBuild",
        "elm-starter:serverDev": "node ./src-elm-starter/elm-starter serverDev",
        "elm-starter:serverStatic": "node ./src-elm-starter/elm-starter serverStatic",
        "elm-starter:watchStartElm": "node ./src-elm-starter/elm-starter watchStartElm"
    },
    "devDependencies": {
        "chokidar-cli": "2.1.0",
        "concurrently": "^5.2.0",
        "elm": "0.19.1-3",
        "elm-live": "git://github.com/lucamug/elm-live.git#patch-4",
        "elm-spa": "5.0.2",
        "elm-test": "0.19.1-revision2",
        "html-minifier": "^4.0.0",
        "npm-run-all": "4.1.5",
        "puppeteer": "^5.2.0",
        "terser": "^4.8.1"
    }
}
